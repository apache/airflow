[tool.black]
line-length = 110
target-version = ['py38', 'py39', 'py310']  # Airflow supported Python versions
include = '\.pyi?$'
extend-exclude = '''
(
  /(
      \.eggs         # exclude a few common directories in the
    | \.git          # root of the project
    | \.hg
    | \.mypy_cache
    | \.tox
    | \.venv
    | _build
    | buck-out  

    | build
    | dist
  )/
)
'''
