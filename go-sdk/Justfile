# Main Justfile for Airflow Go SDK
set shell := ["bash", "-uc", "-O", "globstar"]

# Default recipe to show help
default:
  @just --list

# Build all components
build: build-celery build-examples

# Build the worker binary
build-celery:
  go build -o bin/airflow-go-celery ./celery/cmd

# Build all example bundles
build-examples:
  @just example/bundle/build

# Run unit tests
test:
  @echo "Running unit tests..."
  go run gotest.tools/gotestsum@v1.13.0 -f dots-v2 ./...

# Generate protocol buffers
protoc:
  @prek run -a protoc
