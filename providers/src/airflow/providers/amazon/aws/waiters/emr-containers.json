{
    "version": 2,
    "waiters": {
        "container_job_complete": {
            "operation": "DescribeJobRun",
            "delay": 30,
            "maxAttempts": 60,
            "acceptors": [
                {
                    "matcher": "path",
                    "argument": "jobRun.state",
                    "expected": "COMPLETED",
                    "state": "success"
                },
                {
                    "matcher": "path",
                    "argument": "jobRun.state",
                    "expected": "FAILED",
                    "state": "failure"
                },
                {
                    "matcher": "path",
                    "argument": "jobRun.state",
                    "expected": "CANCELLED",
                    "state": "failure"
                }
            ]
        }
    }
}
