{
    "name": "Apache Airflow - postgres",
    "dockerComposeFile": [
        "../../scripts/ci/docker-compose/devcontainer.yml",
        "../../scripts/ci/docker-compose/backend-postgres.yml",
        "../../scripts/ci/docker-compose/devcontainer-postgres.yml"
    ],
    "customizations": {
        "vscode": {
            "settings": {
                "terminal.integrated.defaultProfile.linux": "bash",
                "terminal.integrated.profiles.linux": {
                    "bash": {
                        "path": "/bin/bash",
                        "args": [
                            "--login",
                            "-c",
                            "/opt/airflow/scripts/docker/entrypoint_ci.sh"
                        ]
                    }
                }
            },
            "extensions": [
                "ms-python.python",
                "ms-python.vscode-pylance",
                "mtxr.sqltools",
                "mtxr.sqltools-driver-pg",
                "rogalmic.bash-debug",
                "ms-azuretools.vscode-docker",
                "dbaeumer.vscode-eslint",
                "ecmel.vscode-html-css",
                "timonwong.shellcheck",
                "redhat.vscode-yaml",
                "rogalmic.bash-debug"
            ]
        }
    },
    "service": "airflow",
    "forwardPorts": [
        8080,
        5555,
        5432,
        6379
    ],
    "workspaceFolder": "/opt/airflow",
    "containerEnv": {
        "AIRFLOW_SOURCES": "/opt/airflow",
        "IN_CONTAINER_DIR": "/opt/airflow/scripts/in_container",
        "NVM_DIR": "/root/.nvm",
        "PATH": "/root/.nvm/versions/node/v20.18.0/bin:/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin"
    },
    // for users who use non-standard git config patterns
    // https://github.com/microsoft/vscode-remote-release/issues/2084#issuecomment-989756268
    "initializeCommand": "cd \"${localWorkspaceFolder}\" && git config --local user.email \"$(git config user.email)\" && git config --local user.name \"$(git config user.name)\"",
    "postCreateCommand": "bash /opt/airflow/.devcontainer/setup.sh",
    "postStartCommand": "",
    "overrideCommand": true
}